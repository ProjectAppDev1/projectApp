<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="public/css/styles.css" rel="stylesheet" type="text/css">
<title>Tamy</title>

</head> 
<style>
    
* {box-sizing: border-box}

/* Set height of body and the document to 100% */
body, html {
  height: 100%;
  margin: 0;
  font-family: Arial;
}

/* Style tab links */
.tablink {
  background-color: #555;
  color: white;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  font-size: 17px;
  width: 25%;
}

.tablink:hover {
  background-color: #777;
}

/* Style the tab content (and add height:100% for full page content) */
.tabcontent {
  color: white;
  display: none;
  padding: 100px 20px;
  height: 100%;
}


#Home {background-color:rgb(0, 157, 255);}
#Products {background-color: rgb(0, 128, 85);}
#Contact {background-color: rgb(107, 107, 178);}
#About {background-color: rgb(144, 111, 176);}

/*עיצוב של ה login and contacat us */
body {
  border: 0;
  margin: 0;
  padding: 0;
  font-family: sans-serif;
  background-color: rgba(250, 250, 250)
}

.container {
  min-height: 100vh;
  justify-content: center;
  align-items: center;
  display: flex;
  text-align: center;
}

.container div > p span {
  color: red;
}

p {
  position: relative;
  top: 30px;
}

p a {
  color: black;
  text-decoration: none;
}

button {
  cursor: pointer;
  border: 0;
  border-radius: 4px;
  font-weight: 600;
  margin: 0 10px;
  width: 200px;
  padding: 10px 0;
  box-shadow: 0 0 20px rgba(104, 85, 224, 0.2);
  transition: 0.4s;
}

.reg {
  color: white;
  background-color: rgba(104, 85, 224, 1);
}

.log {
  color: rgb(104, 85, 224);
  background-color: rgba(255, 255, 255, 1);
  border: 1px solid rgba(104, 85, 224, 1);
}

button:hover {
  color: white;
  width: 15px;
  box-shadow: 0 0 20px rgba(104, 85, 224, 0.6);
  background-color: rgba(104, 85, 224, 1);
}



</style>
<body>

<button class="tablink" onclick="openPage('Home', this, 'red')">Home </button>
<button class="tablink" onclick="openPage('Products', this, 'green')" id="defaultOpen">Products</button>
<button class="tablink" onclick="openPage('Contact', this, 'blue')">Contact </button>
<button class="tablink" onclick="window.location.href='about'">About</button>
<button class="tablink" onclick="window.location.href='about'">Login</button>

<div id="Home" class="tabcontent">
  <h3>Home</h3>
  <p>Home is where the heart is..</p>
</div>

<div id="Products" class="tabcontent">
  <h3>Products</h3>
  <h1>ברוכים הבאים לחנות שלי</h1>

  <h2>מוצרים</h2>
  <ul>
    <li>מוצר 1 <button onclick="addToCart('מוצר 1')">הוסף לעגלה</button></li>
    <li>מוצר 2 <button onclick="addToCart('מוצר 2')">הוסף לעגלה</button></li>
    <li>מוצר 3 <button onclick="addToCart('מוצר 3')">הוסף לעגלה</button></li>
    <!-- ניתן להוסיף עוד מוצרים -->
  </ul>

 

  <h2>עגלת קניות</h2>
  <ul id="cart-list">
    <!-- כאן יוצג רשימת המוצרים שנבחרו בעגלת הקניות -->
  </ul>


  <p>Some products this fine day!</p> 
</div>

<div id="Contact" class="tabcontent">
  <h3>Contact</h3>
  <p>Get in touch, or swing by for a cup of coffee.</p>
  <button onclick="location.href='Payment'" class="btn btn-primary">עבור לעמוד השני</button>

</div>

<div id="About" class="tabcontent">
  <h3>About</h3>
  <p>Who we are and what we do.</p>
  <button onclick="location.href='about'" class="btn btn-primary">עבור לעמוד השני</button>
</div>

<div id="Login" class="tabcontent"></div>

<div class="container">
  <div>
    <button class="log">Login</button>
    <button class="reg">Sign up</button>
    <p>Made with <span>❤</span> by <a href="https://www.instagram.com/rzkytmgr/">@rzkytmgr</a>.</p>
  </div>
</div>

<script>
function openPage(pageName,elmnt,color) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablink");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].style.backgroundColor = "";
  }
  document.getElementById(pageName).style.display = "block";
  elmnt.style.backgroundColor = color;
}
function addToCart(productName) {
      // מציאת אלמנט ה-UL של עגלת הקניות
      var cartList = document.getElementById('cart-list');

      // יצירת אלמנט חדש למוצר
      var newCartItem = document.createElement('li');
      newCartItem.innerText = productName;

      // הוספת המוצר לרשימת המוצרים בעגלת הקניות
      cartList.appendChild(newCartItem);
    }

    function removeFromCart(index) {
      // מציאת אלמנט ה-UL של עגלת הקניות
      var cartList = document.getElementById('cart-list');

      // מציאת המוצר במערך האלמנטים של עגלת הקניות לפי האינדקס
      var cartItem = cartList.childNodes[index];

      // מחיקת המוצר מעגלת הקניות
      cartList.removeChild(cartItem);
    }
// Get the element with id="defaultOpen" and click on it
document.getElementById("defaultOpen").click();
</script>
   
</body>
</html> 