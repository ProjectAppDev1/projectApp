<head>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<h1>Create branch</h1>
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10">
            <label class="control-label col-sm-1" for="text">Name</label>
            <input type="text" class="form-control" id="branch-name-field" placeholder="Branch name">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Location longtitude</label>
            <input type="text" class="form-control" id="branch-location-field-long" placeholder="Location long">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Location latitude</label>
            <input type="text" class="form-control" id="branch-location-field-lat" placeholder="Location alt">
        </div>
        <div class="col-sm-10">
            <div class="control-label col-sm-1">
                <button onclick="addBranch()" class="btn btn-default">Send</button>
                <div class="statusOutput"></div>
            </div>
        </div>
    </div>
</div>
<script>
    function addBranch() {
    const branchName = document.getElementById('branch-name-field').value;
    const branchLocationLong = document.getElementById('branch-location-field-long').value;
    const branchLocationLat = document.getElementById('branch-location-field-lat').value;

    if (branchName === '' || branchLocationLong === '' || branchLocationLat === '') {
        alert("Please fill all fields");
        return;
    }

    const branch = {
        name: branchName,
        longtitude: branchLocationLong,
        latitude: branchLocationLat
    }

    $.ajax({
        url: `/Branch`,
        method: "POST",
        dataType: "json",
        data: branch,
        success: function (response) {
            alert("Branch was updated successfuly");
        },
        error: function (xhr, status, error) {
            console.log("AJAX request failed: " + error);
        },
    });
}
</script>