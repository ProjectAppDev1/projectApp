<head>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
</head>
<h1>Create Wine</h1>
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-10">
            <label class="control-label col-sm-1" for="text">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Wine name">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Type</label>
            <input type="text" class="form-control" id="type">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Price</label>
            <input type="number" class="form-control" id="price">
        </div>
        <div class="col-sm-10">
            <label class="control-label col-sm-1 " for="text">Img url</label>
            <input type="text" class="form-control" id="img-url">
        </div>
        <div class="col-sm-10">
            <br>
            <input type="checkbox" id="publish-to-fb-page">
            <label for="publish-to-fb-page">Publish in WineOnline<a style="color: #0572e6;" href="https://www.facebook.com/profile.php?id=100091104823499">Facebook page</a></label>
        </div>
        <div class="col-sm-10">
            <div class="control-label col-sm-1">
                <button onclick="createWine()" class="btn btn-default">Send</button>
                <div class="statusOutput"></div>
            </div>
        </div>
    </div>
</div>
<script>
    function createWine() {
    const name = document.getElementById('name').value;
    const type = document.getElementById('type').value;
    const price = document.getElementById('price').value;
    const imgUrl = document.getElementById('img-url').value;
    const publishToFacebook = document.getElementById("publish-to-fb-page");

    if (name === '' || type === '' || price === '' || imgUrl === '') {
        alert("Please fill all fields");
        return;
    }

    const data = {
        name,
        type,
        price: parseInt(price),
        img: imgUrl,
    }

    $.ajax({
        url: `/Products`,
        method: "POST",
        dataType: "json",
        data: data,
        success: function (response) {
            let alertStr = "Wine was updated successfuly";
            if (publishToFacebook.checked) {
                postToFacebook(name);
                alertStr += " & published to WineOnline facebook page."
            }
            alert(alertStr);
        },
        error: function (xhr, status, error) {
            console.log("AJAX request failed: " + error);
        },
    });
}

</script>