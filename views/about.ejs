    <script>
      // Monthly Chart Data
      var monthlyData = [
        { month: "July", averageAmount: 175 },
        { month: "August", averageAmount: 230 },
        { month: "September", averageAmount: 185 },
      ];

      var amountData = [
        { date: "2023-07-05", amount: 220 },
        { date: "2023-07-18", amount: 130 },
        { date: "2023-08-02", amount: 270 },
        { date: "2023-08-15", amount: 190 },
        { date: "2023-09-10", amount: 160 },
        { date: "2023-09-25", amount: 210 },
        { date: "2023-10-08", amount: 280 },
        { date: "2023-10-18", amount: 140 },
        { date: "2023-11-05", amount: 240 },
        { date: "2023-11-20", amount: 200 },
      ];

      var monthlyChart = new Chart(document.getElementById("monthlyChart"), {
        type: "bar",
        data: {
          labels: monthlyData.map((entry) => entry.month),
          datasets: [
            {
              label: "Average Amount",
              data: monthlyData.map((entry) => entry.averageAmount),
              backgroundColor: "rgba(54, 162, 235, 0.6)",
              borderColor: "rgba(54, 162, 235, 1)",
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      var amountChart = new Chart(document.getElementById("amountChart"), {
        type: "line",
        data: {
          labels: amountData.map((entry) => entry.date),
          datasets: [
            {
              label: "Amount",
              data: amountData.map((entry) => entry.amount),
              borderColor: "rgba(75, 192, 192, 1)",
              backgroundColor: "rgba(75, 192, 192, 0.2)",
              tension: 0.2,
              fill: true,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });
      $.ajax({
        url: "/api/data",
        method: "GET",
        success: function (data) {
          var groupedByMonth = {};
          data.forEach((entry) => {
            var month = entry.date.split("-")[1];
            if (!groupedByMonth[month]) {
              groupedByMonth[month] = [];
            }
            groupedByMonth[month].push(entry);
          });

          var monthlyData = [];
          for (var month in groupedByMonth) {
            var sum = groupedByMonth[month].reduce(
              (acc, entry) => acc + entry.amount,
              0
            );
            var averageAmount = sum / groupedByMonth[month].length;
            monthlyData.push({ month: month, averageAmount: averageAmount });
          }

          monthlyChart.data.labels = monthlyData.map((entry) => entry.month);
          monthlyChart.data.datasets[0].data = monthlyData.map(
            (entry) => entry.averageAmount
          );
          monthlyChart.update();
        },
      });
    </script>
