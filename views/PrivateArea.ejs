}

th, td {
  padding: 5px;
  border: 1px solid #ccc;
}

tfoot {
  font-weight: bold;
}

.home-button {
  display: inline-block;
  padding: 10px 20px;
  background-color: #333;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
}


 </style>
<body>
  <nav class="navbar navbar-light navbar-expand-md sticky-top navbar-shrink py-3" id="mainNav">
