                 </ul>
              </div>
    </div>
</nav>


  <main>
   
    <section id="purchase-history">
      <h2>Purchase History</h2>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Product</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < orders.length; i++ ) { %>
            <tr>
              <% let total = 0 %>
              <td><b><%=orders[i].createdAt%></b></td>
              <% for( let j = 0; j < orders[i].wines.length; j++ ) { %>
                
                <tr>
                  <td><%=orders[i].wines[j].type%></td>
                  <td><%=orders[i].wines[j].name%></td>
                  <td><%=orders[i].wines[j].price%>$</td>
                  <% total += orders[i].wines[j].price %>
                </tr>
              <% } %>
              <td>total price : <%=total%>$</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>
  

