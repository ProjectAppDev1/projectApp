}

nav ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

nav ul li {
  display: inline;
  margin-right: 10px;
}

nav ul li a {
  color: #fff;
  text-decoration: none;
}

main {
  padding: 20px;
}

section {
  margin-bottom: 30px;
}

h2 {
  margin-top: 0;
}

.details-container {
  display: grid;
  grid-template-columns: 150px auto;
  grid-gap: 10px;
}

.detail-row {
  display: flex;
  align-items: center;
}

label {
  font-weight: bold;
}

input[type="text"],
input[type="email"] {
  width: 100%;
